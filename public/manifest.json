{
  "manifest_version": 3,
  "name": "Wide AI Chats",
  "description": "Widens the chat output area on AI chat websites for better readability",
  "version": "1.0.0",
  "action": {
    "default_title": "Wide AI Chats",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "*://*.chatgpt.com/*",
        "*://*.perplexity.ai/*",
        "*://*.groq.com/*",
        "*://*.claude.ai/*",
        "*://*.deepseek.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": ["activeTab", "storage", "scripting"],
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/favicon.ico",
    "128": "icons/128x128.png"
  }
}
